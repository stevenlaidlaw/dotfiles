format-discharging-underline = ${colors.color8}
format-discharging-padding = 2
format-full-underline = ${colors.color8}
format-full-padding = 2
label-charging =  %percentage%%
label-discharging =  %percentage%%
label-full =  %percentage%%

[module/date]
type = internal/date
interval = 1

date = " %Y-%m-%d"

time = %H:%M:%S

format-padding = 2
format-prefix = 
format-underline = ${colors.color6}

label = %date% %time%

[module/powermenu]
type = custom/menu

expand-right = true

format-padding = 2
format-underline = ${colors.color9}

label-open = 
label-close = cancel
label-separator = "  |  "

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

